[sqlfluff]
dialect = postgres
rules = CP01, LT05, LT01, LT15

# Отключаем правило layout.spacing
exclude_rules = layout.spacing

# Настройка максимальной длины строки
[sqlfluff:rules:layout.long_lines]
max_line_length = 80

# Настройка регистра ключевых слов
[sqlfluff:rules:capitalisation.keywords]
capitalisation_policy = upper
